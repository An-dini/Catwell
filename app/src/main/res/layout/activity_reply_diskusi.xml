<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reply_Diskusi">

    <include
        android:id="@+id/navbarUpperBookmark"
        layout="@layout/navbar_upper_diskusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="72dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraint2"
            android:background="@color/white">

            <ImageView
                android:id="@+id/user_profile2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/userprofile2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.059" />

            <TextView
                android:id="@+id/iv_username"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Aljerian Anvana"
                android:textColor="@color/orange"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/user_profile2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.083" />

            <TextView
                android:id="@+id/iv_text2"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:text="Tolong review nya dong untuk wet food merek ini, buat kittens aku yang umurnya 3 bulan. Thank you!"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/iv_username"
                app:layout_constraintTop_toTopOf="@id/iv_username"
                app:layout_constraintVertical_bias="0.079" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="140dp"
                android:layout_height="92dp"
                android:src="@drawable/imgdiscuss1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_text2"
                app:layout_constraintVertical_bias="0.042" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="140dp"
                android:layout_height="92dp"
                android:src="@drawable/imgdiscuss2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.189"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/iv_text2"
                app:layout_constraintVertical_bias="0.042" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="72dp"
                android:background="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/user_profile3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/userprofile4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/divider2"
                android:layout_marginTop="35dp"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/text_comment1"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Kemaren aku kasih ini ke anak kucing aku, bagus banget kak bulunya jadi sehat banget. Dicampur sama dry food."
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/user_profile3"
                app:layout_constraintTop_toTopOf="@id/divider2"
                android:layout_marginTop="35dp"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/user_profile4"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/userprofile5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_comment1"
                android:layout_marginTop="86dp"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/text_comment2"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Lumayan bagus, tapi aku lebih suka merek sebelah ini lebih mahal tapi kulitasnya hampir sama"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/user_profile4"
                app:layout_constraintTop_toTopOf="@id/text_comment1"
                android:layout_marginTop="86dp"
                app:layout_constraintVertical_bias="0.0" />

            <CheckBox
                android:id="@+id/bookmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@drawable/selectot_bookmark_item"
                app:layout_constraintBottom_toBottomOf="@+id/divider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.919"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.575" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toTopOf="@+id/divider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.776"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.593"
                app:srcCompat="@drawable/comment" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>